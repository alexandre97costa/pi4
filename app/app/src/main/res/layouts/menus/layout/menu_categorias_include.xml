<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="25dp"
    android:textAlignment="center"
    app:tabIconTint="@color/greenPrincipal"
    app:tabIndicatorColor="@color/greenPrincipal"
    app:tabSelectedTextColor="@color/greenPrincipal"
    app:tabTextColor="@color/greenPrincipal"
    tools:viewBindingIgnore="true"
    app:tabIndicatorAnimationMode="linear"
    app:tabMode="scrollable"
    tools:ignore="SpeakableTextPresentCheck">

</com.google.android.material.tabs.TabLayout>